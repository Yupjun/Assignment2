<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>
<%= form_tag(searches_path, :method => "get") do %>

  Category : <%= select_tag(:search, options_for_select([['title', 'title'], ['body', 'body'],['campus','campus'],['nickname','nickname']],4)) %>
  <%= text_field_tag :content, params[:content] %>
  <%= submit_tag "Seacrh", name: nil  %>
<% end %>
<br>

<% if @contents != nil %>
  <% @contents.each do |r| %>
    제목: <%= r.title %><br>
    내용: <%= r.body %><br>
  <% end %>
<% else %>
  내용이 없네요 ..ㅠㅠ  
<% end %>